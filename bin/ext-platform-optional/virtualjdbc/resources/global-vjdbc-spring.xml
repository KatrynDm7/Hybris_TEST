<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd" default-lazy-init="true">




		<bean class="de.hybris.platform.virtualjdbc.jalo.VjdbcServerWrapper" lazy-init="false">
            <property name="config" ref="hybrisProperties" />
        </bean>


        <bean class="de.hybris.platform.virtualjdbc.filter.VjdbcConnectionUidCache" />

        <!-- provide global vjdbc connection configuration -->
        <bean class="de.simplicit.vjdbc.server.config.ConnectionConfiguration" >
            <property name="id" value="${virtualjdbc.id}" />
        </bean>
		
</beans>
