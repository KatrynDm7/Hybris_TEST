<base>
	<search>
		<search-properties>
			<property qualifier="Product.code"/>
			<property qualifier="Product.name"/>
			<property qualifier="Product.description"/>
		</search-properties>
		<sort-properties>
		<property qualifier="Item.modifiedtime"/>
			<property qualifier="Item.pk"/>
			<property qualifier="Product.code"/>
			<property qualifier="Product.name"/>
			<property qualifier="Product.description"/>
