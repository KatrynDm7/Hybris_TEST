<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<widget-definition id="com.hybris.instore.widgets.classificationinfo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

	<name>Classification Info</name>
	<description>Displays a list of classification attributes and values for a given product</description>
	<defaultTitle>Classification Info</defaultTitle>
	<author>hybris</author>
	<version>0.1</version>
	
	<view src="classificationinfo.zul" />

	<controller class="com.hybris.instore.widgets.classificationinfo.ClassificationInfoController"/>

	<sockets>
		<input id="product"
			type="de.hybris.platform.commercefacades.product.data.ProductData"/>
	</sockets>
	
	<settings>
		<setting key="refreshClassificationData" type="Boolean" default-value="true"/>
	</settings>
	
	<keywords>
		<keyword>Mobile</keyword>
	</keywords>
</widget-definition>
