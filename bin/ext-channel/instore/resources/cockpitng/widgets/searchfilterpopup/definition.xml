<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
 
<widget-definition id="com.hybris.instore.widgets.searchfilterpopup" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">
 
<name>Search Filter Popup</name>
<description>Provides a widget slot that is display as a popup window when the filter button is clicked and indicates if filters are applied.</description>
<controller class="com.hybris.instore.widgets.searchfilterpopup.SearchFilterPopupController"/>
  <defaultTitle>Search Filter Popup</defaultTitle>
  <author>hybris</author>
  <version>0.1</version>
  <view src="searchfilterpopup.zul"/>
  <keywords>
    <keyword>Search</keyword>
  </keywords>
  
  <sockets>
  	<input id="searchresult" type="de.hybris.platform.commerceservices.search.facetdata.ProductSearchPageData"/>
  	<input id="closePopup"/>
  	<output id="reset" type="de.hybris.platform.commerceservices.search.facetdata.ProductSearchPageData"/>
  </sockets>
</widget-definition>
