<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
	<widget-definition id="com.hybris.instore.widgets.pageabelistadapter" 
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

			<name>Pageable List Adapter</name>
			<description>Adapter widget for pageablelist widget</description>
			<defaultTitle>List</defaultTitle>
			<author>hybris</author>
			<version>0.1</version>

			<view src="none"/>

			<keywords>
				<keyword>Mobile</keyword>
			</keywords>
 	  
			<sockets>
				<input id="categoryData" type="de.hybris.platform.commercefacades.catalog.data.CategoryHierarchyData"/>
				<output id="productData" type="de.hybris.platform.commercefacades.product.data.ProductData" multiplicity="List"/>
			</sockets>
		 	  
		<controller class="com.hybris.instore.widgets.pageablelist.adapter.PageableListAdapter"/>
</widget-definition>