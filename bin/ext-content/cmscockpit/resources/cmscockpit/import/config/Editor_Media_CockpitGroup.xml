<?xml version="1.0" encoding="UTF-8"?>
<editor>

	<group qualifier="general" visible="false" initially-opened="true">
		<label key="cockpit.config.label.General" />
		<property qualifier="media.code"/>
		<property qualifier="media.mime"/>
		<property qualifier="media.URL" editor="imageEditor"/>
		<property qualifier="media.downloadURL"/>
		<property qualifier="media.description" editor="wysiwyg"/>
		<property qualifier="media.altText"/>
		<property qualifier="media.folder"/>
		<property qualifier="media.realFileName"/>
	</group>

	<custom-group
		class="de.hybris.platform.cockpit.services.config.impl.MediaEditorSectionConfiguration"
		qualifier="uploadsection"
		initially-opened="true"
		visible="true">
		<label key="config.general.preview" />
	</custom-group>

	<group qualifier="admin" visible="true" initially-opened="false">
		<label key="config.general.administration" />
		<property qualifier="Item.pk"/>
		<property qualifier="Item.creationTime"/>
		<property qualifier="Item.modifiedtime"/>
<!--		<property qualifier="Item.assignedCockpitItemTemplates"/>-->
	</group>

</editor>
