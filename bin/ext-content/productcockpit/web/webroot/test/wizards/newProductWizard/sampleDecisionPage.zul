<?xml version="1.0" encoding="utf-8"?>

<?taglib 			uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>

<div 	xmlns="http://www.zkoss.org/2005/zul" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd ">
	<vbox>
		<label value="Choose a target."/>
		<space orient="vertical" height="1em"/>
		<radiogroup orient="vertical">
			<radio label="Progress Page" checked="${pageBean.option1checked}" onCheck="pageBean.setOption1checked(true)" />
			<radio label="End Page" checked="${pageBean.option2checked}" onCheck="pageBean.setOption2checked(true)" />
			<radio label="Invalid" checked="${pageBean.option3checked}" onCheck="pageBean.setOption3checked(true)" />
		</radiogroup>
	</vbox>
</div>