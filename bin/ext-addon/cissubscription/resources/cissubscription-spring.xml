    <!-- The client factory allows us switch between the subscription mock service implementation and custom
    implementation, based on the property "cis.client.subscription.mock". -->
    <bean id="subscriptionServiceMock" class="com.hybris.cis.api.subscription.mock.impl.SubscriptionServiceMockImpl">
		<constructor-arg name="cacheConfigFile" value="sbgCacheConfig.xml" />
		<constructor-arg name="mockPaymentMethodFile" value="mockPaymentMethods.xml" />
		<constructor-arg name="mockBillingsFile" value="mockBillings.xml" />
		<property name="hpfUrl" value="http://mockedsopurl"/>
	</bean>
	
	<bean id="subscriptionClientFactory" parent="abstractMockFactory">
		<property name="mockInterface" value="com.hybris.cis.client.rest.subscription.SubscriptionClient" />
		<property name="mockMode" value="${cis.client.subscription.mock}" />
		<lookup-method name="getDefaultObject" bean="defaultSubscriptionClient" />
		<property name="customMock">
			<bean class="com.hybris.cis.client.rest.subscription.mock.SubscriptionMockClientImpl" autowire-candidate="false">
				<property name="subscriptionService" ref="subscriptionServiceMock" />
			</bean>
		</property>
	</bean>
   	<!-- alias to name expected by caller extension -->
    <alias name="subscriptionClientFactory" alias="subscriptionClient"/>
    
	<aop:aspectj-autoproxy />
	<bean class="de.hybris.platform.integration.cis.aspect.HandleServiceRequestExceptionAspect"/>
	<bean id="threadScopedMessages" class="de.hybris.platform.integration.cis.util.ThreadLocalMessageStorage"/>
    
