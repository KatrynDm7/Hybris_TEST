<?xml version="1.0" encoding="UTF-8"?>
<wizard-config showPrefilledValues="false" selectMode="true" createMode="false" createWithinPopup="false"
               createWithinEditor="false">
    <displayed-properties>
        <group qualifier="General" visible="true" initially-opened="true">
            <label key="cockpit.config.label.General"/>
            <property qualifier="ChangeProductPriceBundleRule.name"/>
            <property qualifier="ChangeProductPriceBundleRule.billingEvent"/>
        </group>
        <group qualifier="Condition" visible="true" initially-opened="true">
            <label key="configurablebundlecockpits.product.rules.condition"/>
            <property qualifier="ChangeProductPriceBundleRule.ruleType"/>
            <property qualifier="ChangeProductPriceBundleRule.conditionalProducts">
                <parameter name="allowCreate" value="false"/>
                <parameter name="allowSelect" value="true"/>
                <parameter name="restrictToCreateTypes" value="SubscriptionProduct+"/>
            </property>
        </group>
        <group qualifier="Action" visible="true" initially-opened="true">
            <label key="configurablebundlecockpits.product.rules.action"/>
            <property qualifier="ChangeProductPriceBundleRule.targetProducts">
                <parameter name="allowCreate" value="false"/>
                <parameter name="allowSelect" value="true"/>
                <parameter name="restrictToCreateTypes" value="SubscriptionProduct+"/>
            </property>
            <property qualifier="ChangeProductPriceBundleRule.price" editorCode="bigDecimal"/>
            <property qualifier="ChangeProductPriceBundleRule.currency"/>
        </group>
    </displayed-properties>
</wizard-config>

