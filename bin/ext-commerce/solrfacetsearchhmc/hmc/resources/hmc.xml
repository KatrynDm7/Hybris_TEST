	<type name="SolrFacetSearchConfig" useselector="true" mode="append"
			icon="ext/solrfacetsearch/images/facetsearch.gif">
		<organizer>
			<search mode="replace" autoperform="true">
				<condition attribute="name"/>
				<condition attribute="description"/>
				<condition attribute="catalogVersions"/>
				<condition attribute="currencies"/>
				<condition attribute="languages"/>
			</search>
			<result defaultview="list">
				<listview mode="replace">
					<itemlayout>
						<attribute name="name" width="100"/>
						<attribute name="description" width="300"/>
					</itemlayout>
				</listview>
				<editview mode="replace">
					<itemlayout>
						<attribute name="name" width="150"/>
						<attribute name="description" width="300"/>
					</itemlayout>
				</editview>
				<treeview mode="replace">
					<itemlayout>
						<attribute name="name"/>
						<attribute name="description"/>
					</itemlayout>
				</treeview>
			</result>
			<editor>
				<essentials mode="replace">
					<listlayout>
						<attribute name="name"/>
					</listlayout>
				</essentials>
				<tab name="tab.configuration.properties">
					<section name="sec.configuration.cronjobs">
						<listlayout>
							<attribute name="solrIndexerCronJob"/>
						</listlayout>
					</section>
					<section name="sec.configuration.properties">
						<listlayout>
							<attribute name="description" editable="true"/>
							<attribute name="catalogVersions" editable="true">
								<referencecollectioneditor resortable="false" create="true" remove="true" autosave="false">
									<itemlayout>
										<attribute name="catalog"/>
										<attribute name="version"/>
									</itemlayout>
								</referencecollectioneditor>
							</attribute>
							<attribute name="currencies" editable="true">
								<referencecollectioneditor resortable="false" create="true" remove="true" autosave="false">
									<itemlayout>
										<attribute name="name"/>
									</itemlayout>
								</referencecollectioneditor>
							</attribute>
							<attribute name="languages" editable="true">
								<referencecollectioneditor resortable="false" create="true" remove="true" autosave="false">
									<itemlayout>
										<attribute name="isoCode"/>
										<attribute name="name"/>
									</itemlayout>
								</referencecollectioneditor>
							</attribute>
							<attribute name="enabledLanguageFallbackMechanism" editable="true"/>
							<attribute name="solrValueRangeSets"/>
							<attribute name="indexNamePrefix"/>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.configuration.indexedtypes">
					<section name="sec.configuration.indexedtypes">
						<listlayout>
							<attribute name="solrIndexedTypes" editable="true">
								<referencecollectioneditor resortable="false" create="true" remove="true" autosave="false">
									<itemlayout>
										<attribute name="identifier"/>
										<attribute name="type"/>
									</itemlayout>
								</referencecollectioneditor>
							</attribute>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.configuration.searchconfig">
					<section name="sec.configuration.searchconfig">
						<listlayout>
							<attribute name="solrSearchConfig"/>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.configuration.solrconfig.redirects">
					<section name="tab.configuration.solrconfig.redirects.general">
						<listlayout>
							<attribute name="languageKeywordRedirectMapping" editable="true">
								<referencecollectioneditor presetattribute="facetSearchConfig" add="false" create="true"
																	editable="true">
								</referencecollectioneditor>
							</attribute>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.configuration.solrconfig">
					<section name="sec.configuration.solrconfig">
						<listlayout>
							<attribute name="solrServerConfig"/>
						</listlayout>
					</section>
					<section name="sec.configuration.indexerconfig">
						<listlayout>
							<attribute name="solrIndexConfig" editable="true"/>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.configuration.solrconfig.synonym">
					<section name="sec.configuration.solrconfig.synonym">
						<listlayout>
							<action classname="de.hybris.platform.solrfacetsearch.hmc.ExportSynonymsAction" type="item"
									  name="act.configuration.solrconfig.synonym" hidebutton="false"/>
							<attribute name="languageSynonymMapping" editable="true">
								<referencecollectioneditor add="false" create="true" editable="true"/>
							</attribute>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.configuration.solrconfig.stopword">
					<section name="sec.configuration.solrconfig.stopword">
						<columnlayout>
							<row>
								<action classname="de.hybris.platform.solrfacetsearch.hmc.ExportStopWordsAction" type="item"
										  name="act.configuration.solrconfig.stopword" hidebutton="false"/>
							</row>
						</columnlayout>
						<listlayout>
							<attribute name="languageStopWordMapping" editable="true">
								<referencecollectioneditor add="false" create="true" editable="true"/>
							</attribute>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.configuration.listeners">
					<section name="sec.configuration.listeners">
						<listlayout>
							<attribute name="listeners"/>
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
		<defaultreference mode="replace" searchattribute="name">
			<itemlayout>
				<attribute name="name"/>
			</itemlayout>
		</defaultreference>
	</type>

