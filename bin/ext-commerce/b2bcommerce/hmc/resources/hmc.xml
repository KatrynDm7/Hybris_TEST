									remove="true" create="true" autosave="false">
									<itemlayout>
										<attribute name="code" />
										<attribute name="name" />
										<attribute name="currency" />
										<attribute name="Unit" />
										<attribute name="active" />
									</itemlayout>
								</referencecollectioneditor>
