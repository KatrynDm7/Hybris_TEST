	<!-- *** PROMOTION GROUP *** -->

	<type name="PromotionGroup" mode="append">
		<organizer>
			<search mode="replace" autoperform="true">
				<condition attribute="identifier"/>
			</search>
			<result mode="replace">
				<listview>
					<itemlayout>
						<attribute name="identifier" width="260"/>
					</itemlayout>
				</listview>
			</result>
			<editor>
				<essentials mode="replace">
					<listlayout>
							<attribute name="identifier" labelwidth="100" width="260"/>
					</listlayout>
				</essentials>

				<tab name="tab.promotiongroup.properties" position="0">
					<section name="section.promotiongroup.promotions">
						<listlayout>
							<attribute name="promotions" labelwidth="100" width="224">
								<referencecollectioneditor
									presetattribute="promotionGroup"
									create="true"
									add="true"
									remove="true"
									autosave="true">
									<itemlayout>
										<attribute name="promotionType" width="160"/>
										<attribute name="code" width="110"/>
										<attribute name="title" width="350"/>
									</itemlayout>
								</referencecollectioneditor>
							</attribute>
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
		<defaultreference mode="replace">
			<itemlayout>
				<attribute name="identifier"/>
			</itemlayout>
		</defaultreference>
	</type>

	<!-- *** PROMOTIONS *** -->

	<type name="AbstractPromotion" icon="ext/promotions/images/promotion.gif" mode="append">
		<organizer>
			<search mode="replace" autoperform="true">
				<condition attribute="code"/>
				<condition attribute="title"/>
				<condition attribute="enabled"/>
				<condition attribute="immutableKeyHash" operator="is null" />
			</search>
			<result mode="replace">
				<listview>
					<itemlayout>
						<attribute name="promotionType" width="160"/>
						<attribute name="code" width="110" />
						<attribute name="title" width="350" />
						<attribute name="enabled" width="60" />
						<attribute name="priority" width="60" />
					</itemlayout>
				</listview>
			</result>
			<editor>
				<essentials mode="replace">
					<columnlayout leftwidth="370" rightwidth="370">
						<row>
							<attribute name="code" labelwidth="100" width="224"/>
							<attribute name="title" labelwidth="100" width="224"/>
						</row>
						<row>
							<customchip jsp="/ext/promotions/StylesheetChip.jsp" />
						</row>
					</columnlayout>
				</essentials>

				<tab name="tab.promotion.properties" position="0">
					<section name="section.promotion.description">
					</section>
					<section name="section.promotion.details">
						<columnlayout leftwidth="370">
							<row>
								<attribute name="promotionGroup" labelwidth="100" />
							</row>
							<row>
								<attribute name="description" labelwidth="100" width="400">
									<textareaeditor />
								</attribute>
							</row>
							<row>
								<attribute name="enabled" labelwidth="100" />
							</row>
							<row>
								<attribute name="priority" labelwidth="100" width="224"/>
								<text name="text.promotion.priority" />
							</row>
						</columnlayout>
					</section>
				</tab>
				<tab name="tab.promotion.restrictions" position="1">
					<section name="section.promotion.restrictions">
						<listlayout>
							<text name="text.promotion.daterange" />
							<attribute name="startDate" labelwidth="100" width="224"/>
							<attribute name="endDate" labelwidth="100" width="224"/>
							<text name="text.promotion.restrictions" />
							<attribute name="restrictions" labelwidth="100" width="224">
								<referencecollectioneditor
									presetattribute="promotion"
									create="true"
									add="true"
									remove="true"
									autosave="true">
									<itemlayout>
										<attribute name="restrictionType" width="150"/>
										<attribute name="renderedDescription" width="250"/>
									</itemlayout>
								</referencecollectioneditor>
							</attribute>
						</listlayout>
					</section>
				</tab>
				<tab name="tab.promotion.media" position="2">
					<section name="section.promotion.media">
						<columnlayout leftwidth="370">
							<row>
								<attribute name="detailsURL" labelwidth="100" />
								<text name="text.promotion.detailsurl" />
							</row>
						</columnlayout>
					</section>
				</tab>
			</editor>
		</organizer>
		<defaultreference mode="replace">
			<itemlayout>
				<attribute name="code"/>
				<attribute name="title"/>
				<attribute name="enabled"/>
			</itemlayout>
		</defaultreference>
	</type>

